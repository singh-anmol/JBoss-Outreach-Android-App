<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/contributor"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginTop="3dp"
	android:layout_marginBottom="3dp"
	android:layout_marginStart="8dp"
	android:layout_marginEnd="8dp"
	android:clickable="true"
	android:focusable="true"
	android:foreground="?android:attr/selectableItemBackground">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="80dp"
		android:layout_gravity="center_vertical"
		android:orientation="horizontal"
		android:padding="7dp">

		<ImageView
			android:id="@+id/contributor_avatar"
			android:layout_width="65dp"
			android:layout_height="65dp"
			android:layout_gravity="center"
			android:layout_marginStart="2dp"
			android:src="@drawable/ic_contributor" />

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="17dp"
			android:orientation="vertical">

			<TextView
				android:id="@+id/contributor_name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="6dp"
				android:layout_marginBottom="3dp"
				android:text="Contributor's Name"
				android:textSize="20sp"
				android:textStyle="bold" />

			<TextView
				android:id="@+id/contribution_count"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Contributions: null"
				android:textSize="14sp" />

		</LinearLayout>

	</LinearLayout>

</android.support.v7.widget.CardView>