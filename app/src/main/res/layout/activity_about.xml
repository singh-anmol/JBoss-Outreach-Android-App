<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".AboutActivity">

	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:paddingTop="4dp"
		app:cardBackgroundColor="@color/colorPrimaryLight">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:padding="7dp">

			<ImageView
				android:layout_width="23dp"
				android:layout_height="23dp"
				android:layout_gravity="center"
				android:layout_marginStart="7dp"
				android:src="@drawable/ic_about"
				android:tint="@color/colorPrimary" />

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="15dp"
				android:orientation="vertical">

				<TextView
					android:id="@+id/viewed_repo_name"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="This app was developed as a part of Google Code-in 2018 task"
					android:textColor="@color/colorPrimary"
					android:textSize="15sp"
					android:textStyle="bold" />

			</LinearLayout>

		</LinearLayout>

	</android.support.v7.widget.CardView>

	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingTop="30dp">

			<View
				android:layout_width="180dp"
				android:layout_height="1dp"
				android:layout_gravity="center"
				android:layout_marginBottom="4dp"
				android:background="#757575"
				android:visibility="gone" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="4dp"
				android:text="DEVELOPER'S  DETAIL"
				android:textAlignment="center"
				android:textColor="#757575"
				android:textSize="16sp"
				android:textStyle="bold"
				android:visibility="gone" />

			<View
				android:layout_width="180dp"
				android:layout_height="1dp"
				android:layout_gravity="center"
				android:layout_marginBottom="25dp"
				android:background="#757575"
				android:visibility="gone" />

			<ImageView
				android:layout_width="185dp"
				android:layout_height="185dp"
				android:layout_gravity="center_horizontal"
				android:layout_marginBottom="15dp"
				android:background="@drawable/img_border"
				android:outlineProvider="bounds"
				android:padding="1dp"
				app:srcCompat="@drawable/avatar" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="6dp"
				android:text="Anmol Singh"
				android:textAlignment="center"
				android:textColor="@color/colorAccent"
				android:textSize="20sp"
				android:textStyle="bold" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="6dp"
				android:autoLink="email"
				android:text="anmol.singh2503@gmail.com"
				android:textAlignment="center"
				android:textColor="@color/colorAccent"
				android:textSize="17sp"
				android:textStyle="bold" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:autoLink="web"
				android:text="https://github.com/singh-anmol"
				android:textAlignment="center"
				android:textColor="@color/colorAccent"
				android:textSize="17sp"
				android:textStyle="bold" />


			<View
				android:layout_width="180dp"
				android:layout_height="1dp"
				android:layout_gravity="center"
				android:layout_marginTop="55dp"
				android:layout_marginBottom="4dp"
				android:background="#757575" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="4dp"
				android:text="LIBRARIES  USED"
				android:textAlignment="center"
				android:textColor="#757575"
				android:textSize="16sp"
				android:textStyle="bold" />

			<View
				android:layout_width="180dp"
				android:layout_height="1dp"
				android:layout_gravity="center"
				android:layout_marginBottom="25dp"
				android:background="#757575" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="8dp"
				android:autoLink="web"
				android:text="https://github.com/google/volley"
				android:textAlignment="center"
				android:textColor="@color/colorAccent"
				android:textSize="18sp"
				android:textStyle="bold" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="8dp"
				android:autoLink="web"
				android:text="https://github.com/google/gson"
				android:textAlignment="center"
				android:textColor="@color/colorAccent"
				android:textSize="18sp"
				android:textStyle="bold" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="80dp"
				android:autoLink="web"
				android:text="https://github.com/square/picasso"
				android:textAlignment="center"
				android:textColor="@color/colorAccent"
				android:textSize="18sp"
				android:textStyle="bold" />

		</LinearLayout>

	</ScrollView>

</LinearLayout>